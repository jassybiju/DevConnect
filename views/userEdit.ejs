<%-include("header")%>
<div class="min-h-screen flex bg-slate-900 text-slate-100">
  <!-- Sidebar -->
  <aside class="w-64 bg-slate-950 p-6 flex flex-col justify-between">
    <div>
      <h2 class="text-2xl font-bold text-cyan-400 mb-6">DevConnector</h2>
      <nav class="space-y-4">
        <a href="/dashboard" class="block hover:text-cyan-300">Profile</a>
        <a href="/edit-profile" class="block text-cyan-300 font-semibold">Edit Profile</a>
      </nav>
    </div>
    <div>
      <form action="/logout" method="POST">
        <button type="submit" class="w-full mt-6 px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-md transition duration-300">
          Logout
        </button>
      </form>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8">
    <h1 class="text-3xl font-bold text-cyan-300 mb-6">Edit Your Profile</h1>

    <form action="/edit" method="POST" class="space-y-6 max-w-3xl">
      <div>
        <label for="bio" class="block mb-1">Bio</label>
        <textarea id="bio" name="bio" rows="4" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400"></textarea>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="projects" class="block mb-1">projects</label>
          <input type="text" id="projects" name="projects" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400" />
        </div>

        <div>
          <label for="experience" class="block mb-1">experience</label>
          <input type="text" id="experience" name="experience" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400" />
        </div>
      </div>

      <div>
        <label for="followers" class="block mb-1">followers (comma separated)</label>
        <input type="text" id="followers" name="followers" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400" />
      </div>

      <!-- <div>
        <h3 class="text-lg font-semibold mb-2 text-cyan-300">Social Links</h3>
        <div class="space-y-4">
          <input type="url" placeholder="GitHub" name="github" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400" />
          <input type="url" placeholder="LinkedIn" name="linkedin" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400" />
          <input type="url" placeholder="Twitter" name="twitter" class="w-full p-3 rounded-md bg-slate-800 border border-slate-600 text-slate-100 focus:ring-2 focus:ring-cyan-400" />
        </div>
      </div> -->

      <div class="flex gap-4">
        <button type="submit" class="px-6 py-2 bg-cyan-500 text-slate-900 font-semibold rounded-md hover:bg-cyan-400 transition duration-300">
          Save
        </button>
        <a href="/dashboard" class="px-6 py-2 bg-slate-700 text-white rounded-md hover:bg-slate-600 transition duration-300">
          Cancel
        </a>
      </div>
    </form>
  </main>
</div>



<%-include('footer')%>